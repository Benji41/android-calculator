<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray"
        >

        <TextView

            android:id="@+id/txtV_OPERATIONS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="60dp"
            android:gravity="end"
            android:textSize="60sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnV_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="@string/clear"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnV_opDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

        <Button
            android:id="@+id/btnV_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnV_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnV_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnV_opDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="@string/division"
            android:textSize="20sp"
            app:rippleColor="@color/gray_black" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/btnV_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_opTimes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:text="@string/times"
                android:textSize="20sp"
                app:rippleColor="@color/gray_black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnV_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_opMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:text="@string/minus"
                android:textSize="20sp"
                app:rippleColor="@color/gray_black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnV_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:text="@string/dot"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnV_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnV_opADD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:text="@string/addition"
                android:textSize="20sp"
                app:rippleColor="@color/gray_black" />

        </LinearLayout>

    <Button
        android:id="@+id/btnV_opEquals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:text="@string/equals"
        android:textSize="48sp" />

</LinearLayout>