<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtV_OPERATIONS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:paddingTop="130dp"
            android:textSize="60sp"
            android:background="@color/gray"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnV_7"
                android:layout_width="4dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btnV_8"
                android:layout_width="10dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btnV_9"
                android:layout_width="10dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/btnV_opADD"
                android:layout_width="10dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnV_4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/btnV_5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/btnV_6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/btnV_opMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnV_1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/btnV_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/btnV_3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/btnV_opTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnV_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/btnV_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CLEAR" />

            <Button
                android:id="@+id/btnV_opDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/" />
        </LinearLayout>

        <Button
            android:id="@+id/btnV_opEquals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="=" />

    </LinearLayout>

</LinearLayout>